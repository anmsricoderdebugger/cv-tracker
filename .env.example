# Database
DATABASE_URL=postgresql://cvtracker:cvtracker_pass@localhost:5432/cvtracker

# Redis (used for task progress and OAuth state storage)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET=change-me-to-a-random-secret-key

# Google OAuth2 SSO
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback
# URL of the Streamlit frontend — OAuth callback redirects here with ?token=...
APP_BASE_URL=http://localhost:8501

# Vertex AI (Google Cloud LLM — replaces Groq)
# Authenticate locally with: gcloud auth application-default login
# On Cloud Run, assign the service account roles/aiplatform.user
VERTEX_PROJECT_ID=your-gcp-project-id
VERTEX_LOCATION=us-central1
VERTEX_MODEL=gemini-1.5-pro
VERTEX_FAST_MODEL=gemini-1.5-flash
